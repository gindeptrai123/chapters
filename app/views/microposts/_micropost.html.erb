<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.micropost_ava), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    <%= t "micropost.p1" %> <%= time_ago_in_words(micropost.created_at) %> <%= t "micropost.p2" %>
  </span>
  <% if current_user?(micropost.user) %>
    <%= link_to t("micropost.delete"), micropost, method: :delete,
                            data: { confirm: t("micropost.confirm") } %>
  <% end %>
</li>
