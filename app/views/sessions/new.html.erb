<% provide(:title, t("session.title")) %>
<%= link_to t("static_pages.array_language.lgeng"), locale: Settings.en %>
<%= link_to t("static_pages.array_language.lgvn"), locale: Settings.vn %>
<br>
<h1><%= t "session.title" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email , t("session.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("session.password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.submit t("session.login"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t "session.p1" %><%= link_to t("session.sun"), signup_path %></p>
  </div>
</div>
